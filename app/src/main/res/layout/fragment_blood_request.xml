<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Fragments.BloodRequest">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Search/filter by blood group and location"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="#fff"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="5dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Urgent | Very Urgent"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:background="@drawable/rect_curve"
                    android:backgroundTint="#06786E"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="5dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Amrita Kumari"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:maxLines="1"
                                android:ellipsize="end"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="XYZ, Hospital, Banglore"
                                android:textSize="14sp"
                                android:maxLines="1"
                                android:ellipsize="end"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Age: 24, Gender: F, Distance: 12KM"
                                android:textColor="#4E4E4E"
                                android:textSize="12sp"
                                android:layout_marginTop="10dp"
                                android:maxLines="1"
                                android:ellipsize="end"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Last Date : 22-02-2023"
                                android:textColor="#4E4E4E"
                                android:textSize="12sp"
                                android:layout_marginTop="5dp"
                                android:maxLines="1"
                                android:ellipsize="end"
                                />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/blood"
                            android:backgroundTint="#f00"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="O+"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                android:textColor="#fff"
                                android:gravity="center"
                                android:paddingTop="10dp"
                                />

                        </LinearLayout>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="5 min ago"
                            android:textColor="#919191"
                            android:textSize="9sp"
                            android:layout_marginTop="10dp"
                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Donate"
                            android:textColor="#F44336"
                            android:textSize="13sp"
                            android:layout_marginTop="10dp"
                            android:gravity="end"
                            android:textStyle="bold"
                            android:layout_marginEnd="15dp"
                            />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>